<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightGray</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DetailsActivityTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/darkGray</item>
    </style>

    <style name="QuizActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/quizActivityBlue</item>
        <item name="colorPrimaryDark">@color/quizActivityDarkBlue</item>
        <item name="colorAccent">@color/quizActivityBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Style for all quiz options-->
    <style name="RadioGroupStyle">
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
